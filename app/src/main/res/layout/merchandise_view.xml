        android:layout_width="76dp"
        android:layout_height="76dp"
        android:background="@drawable/raiderfit1"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
