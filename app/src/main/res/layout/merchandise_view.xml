            android:layout_height="wrap_content"
            android:text="Contact Details:"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="0748242562"
            android:layout_weight="1"
            android:id="@+id/tvBContact"/>


    </LinearLayout>

